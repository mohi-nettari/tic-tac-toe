<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#343656"
    android:gravity="center"
    tools:context=".MainActivity">




    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:id="@+id/btn1"
        android:layout_marginRight="8dp"

        android:background="#343656"
        android:layout_above="@+id/btn5"
        android:layout_marginBottom="23dp"
        android:layout_toLeftOf="@+id/colomen1"


        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:id="@+id/btn1image" >

        </ImageView>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:id="@+id/btn2"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="#343656"
        android:layout_above="@+id/btn5"
        android:layout_marginBottom="23dp"

        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:id="@+id/btn2image" >

        </ImageView>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn3"
        android:layout_centerInParent="true"
        android:layout_above="@+id/row1"
     android:layout_toRightOf="@+id/colomen2"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="8dp"
        android:background="#343656">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:id="@+id/btn3image" >

        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:id="@+id/btn4"
        android:layout_toLeftOf="@id/btn5"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="20dp"
        android:background="#343656">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:id="@+id/btn4image" >

        </ImageView>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:id="@+id/btn5"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="#343656">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:id="@+id/btn5image" >

        </ImageView>

    </RelativeLayout>




    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:id="@+id/btn6"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="15dp"
        android:background="#343656"
        android:layout_toRightOf="@id/btn5"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:id="@+id/btn6image" >

        </ImageView>

    </RelativeLayout>




    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:id="@+id/btn7"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="25dp"
        android:background="#343656"
        android:layout_below="@+id/btn4"
        android:layout_toLeftOf="@id/btn8"
        android:layout_marginTop="25dp"

        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:id="@+id/btn7image" >

        </ImageView>

    </RelativeLayout>




    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn8"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="#343656"
        android:layout_below="@id/btn5"

        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:id="@+id/btn8image" >

        </ImageView>

    </RelativeLayout>






    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:id="@+id/btn9"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="15dp"
        android:background="#343656"
        android:layout_below="@+id/btn4"
        android:layout_toRightOf="@id/btn8"
        android:layout_marginTop="23dp"

        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:id="@+id/btn9image" >

        </ImageView>

    </RelativeLayout>





<RelativeLayout
    android:layout_width="380dp"
    android:layout_height="8dp"
    android:id="@+id/row1"
    android:background="#f69e78"
    android:layout_centerHorizontal="true"
    android:layout_above="@id/btn5"
    android:layout_marginBottom="8dp">

    </RelativeLayout>



<RelativeLayout
android:layout_width="380dp"
android:layout_height="8dp"
    android:id="@+id/row2"
android:background="#f69e78"
android:layout_centerHorizontal="true"
android:layout_marginTop="8dp"
android:layout_below="@id/btn5">

    </RelativeLayout>




    <RelativeLayout
        android:layout_width="8dp"
        android:layout_height="380dp"
        android:id="@+id/colomen1"
        android:background="#f69e78"
    android:layout_centerVertical="true"
      android:layout_toLeftOf="@+id/btn5"
     android:layout_marginRight="00dp">

    </RelativeLayout>




    <RelativeLayout
        android:layout_width="8dp"
        android:layout_height="380dp"
        android:id="@+id/colomen2"
        android:background="#f69e78"
        android:layout_centerVertical="true"
      android:layout_toRightOf="@id/btn5"
        android:layout_marginLeft="00dp">

    </RelativeLayout>





     <Button
         android:layout_width="320dp"
         android:layout_height="50dp"
         android:id="@+id/reset"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="80dp"
         android:layout_below="@+id/btn8"
         android:text="Reset"
         android:textSize="15dp"
         android:textColor="@color/white"
         android:backgroundTint="@color/purple_200">
         </Button>




    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/scorl"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scorex"
            android:text="score X :  0"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25dp">


        </TextView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scoreo"
            android:text="score O :  0"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25dp">


        </TextView>

    </LinearLayout>




</RelativeLayout>